.kpi-arrow {
	border: solid;
	border-width: 0 3px 3px 0;
	display: inline-block;
	padding: 3px;
	text-align: center;
	vertical-align: middle;
}

.kpi-arrow-up {
	transform: rotate(-135deg);
	-webkit-transform: rotate(-135deg);
}

.kpi-arrow-down {
	transform: rotate(45deg);
	-webkit-transform: rotate(45deg);
}

.kpi-arrow-right {
	transform: rotate(-45deg);
	-webkit-transform: rotate(-45deg);
}

.kpi-data-negative {
	color: red;
}

.kpi-data-positive {
	color: green;
}

.kpi-data-neutral {
	color: black;
}

.kpi-title {
	font-family: Arial, Helvetica, sans-serif;
	font-size: 20px;
	text-align: center;
	padding: 5px;
	padding-top: 10px;	
}

.kpi-text {
	font-family: Arial, Helvetica, sans-serif;
	font-size: 35px;
	text-align: center;
	padding: 10px;
	color: #000000;
	font-weight: bold;
}

.kpi-sub-text {
	font-size: 15px;
	font-weight: 100;
}